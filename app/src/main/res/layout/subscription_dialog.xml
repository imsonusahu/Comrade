<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/padding_10"
        android:layout_centerInParent="true"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/card_back"
                    android:layout_alignParentTop="true"
                    >

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BRONZE"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:textColor="#ffffff"
                    >

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:padding="5dp"
                    android:textColor="#3A3A3A"
                    android:id="@+id/bronzeTxt"
                    >

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bronzeTxt"
                    >


                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:text="Buy Now"
                    android:id="@+id/bronzeBtn"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/bronze_button_back"
                    android:textColor="@color/white"
                    >

                </Button>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/card_silver"
                    android:layout_alignParentTop="true"
                    >

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SILVER"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:textColor="#ffffff"
                    >

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:padding="5dp"
                    android:textColor="#3A3A3A"
                    android:id="@+id/silverCard"

                    >

                </TextView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/card_gold"
                    android:layout_alignParentTop="true"
                    >

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GOLD"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:textColor="#ffffff"
                    >

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:fontFamily="@font/bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"
                    android:padding="5dp"
                    android:textColor="#3A3A3A"
                    android:id="@+id/bronze"
                    >

                </TextView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>



</RelativeLayout>