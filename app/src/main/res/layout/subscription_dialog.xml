<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical"

    android:paddingVertical="20dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/padding_10"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/card_back">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:text="BRONZE"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp">

                </TextView>


                <TextView
                    android:id="@+id/bronzeTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:padding="5dp"
                    android:text="$20"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"
                    android:textSize="18sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bronzeTxt">


                </LinearLayout>


                <Button
                    android:id="@+id/bronzeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/bronze_button_back"
                    android:text="Buy Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white">

                </Button>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/card_silver">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:text="SILVER"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp">

                </TextView>


                <TextView
                    android:id="@+id/silverCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:padding="5dp"
                    android:text="$20"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"
                    android:textSize="18sp"

                    >

                </TextView>


                <Button
                    android:id="@+id/silverBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/silver_button_back"
                    android:text="Buy Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white">

                </Button>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/card_gold">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:text="GOLD"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp">

                </TextView>


                <TextView
                    android:id="@+id/bronze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:padding="5dp"
                    android:text="$20"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"
                    android:textSize="18sp">

                </TextView>


                <Button
                    android:id="@+id/buyGoldBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/gold_button_back"
                    android:text="Buy Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white">

                </Button>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linear"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rzp_green_button"
        android:backgroundTint="@color/pink"
        android:text="Dismiss"
        android:id="@+id/dismissBtn"
        android:textAllCaps="false"
        android:textColor="@color/white">

    </Button>

</RelativeLayout>