<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="vertical"

        tools:context=".activity.SettingActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8E7E7"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/tb_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="top"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:gravity="top">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="Setting"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal">
                </TextView>

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back_"
                    android:visibility="visible">
                </ImageView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/logout_card"
                android:layout_below="@id/tb_layout"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Discovery"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp">

                </TextView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/locationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        >

                        <TextView
                            android:id="@+id/currentLocTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="start"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Current location"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_semi_bold"

                            android:padding="2dp"
                            android:text="Address"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/address"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="start"
                            android:breakStrategy="high_quality"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/pink"
                            android:text="Change location"
                            android:textSize="14sp">

                        </TextView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/genderCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"

                    app:cardMaxElevation="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        >


                        <TextView
                            android:id="@+id/maxDist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"

                            android:text="Show me"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/genderSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_semi_bold"

                            android:padding="2dp"
                            android:layout_centerInParent="true"
                            android:text="Gender"
                            android:textColor="@color/pink"
                            android:textSize="14sp">

                        </TextView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/blockedCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"

                    app:cardMaxElevation="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        >


                        <TextView
                            android:id="@+id/blockedUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"

                            android:text="Blocked user"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/blockedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_semi_bold"

                            android:padding="2dp"
                            android:text="10"
                            android:textColor="@color/pink"
                            android:textSize="14sp">

                        </TextView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/maxDistCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"

                    app:cardMaxElevation="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        >


                        <TextView
                            android:id="@+id/maxDistancetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            android:text="Maximum Distance"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/maxDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_semi_bold"

                            android:padding="2dp"
                            android:text="10 Km."
                            android:textColor="@color/pink"
                            android:textSize="14sp">

                        </TextView>




                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_10"
                            android:layout_below="@id/maxDistancetxt"
                            android:thumb="@drawable/seek_bar_thumb"
                            android:progressTint="@color/pink"
                            android:progressBackgroundTint="#535353"
                            android:secondaryProgressTint="@color/pink"
                            >

                        </SeekBar>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/ageRangeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:paddingVertical="@dimen/padding_10"
                    app:cardMaxElevation="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        >


                        <TextView
                            android:id="@+id/ageRangeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            android:text="Maximum Distance"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/ageRangeBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_semi_bold"

                            android:padding="2dp"
                            android:text="10 Km."
                            android:textColor="@color/pink"
                            android:textSize="14sp">

                        </TextView>





                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/logout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <Button
                    android:id="@+id/btn_logout"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="14sp">
                </Button>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </ScrollView>
</layout>